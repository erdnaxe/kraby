    <origin xyz="{{ x }} {{ y }} {{ z }}" rpy="{{ r }} {{ p }} {{ ya }}" />
    <parent link="{{ parent }}" />
    <child link="{{ child }}" />
    <axis xyz="{{ axis }}" />
